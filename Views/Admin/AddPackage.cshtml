@model KazerBariWeb.Models.Package
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
            <section>
                <div class="container">
                    <div class="col-md-12 mt-5">
                        <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#staticBackdrop2"
                            style="margin-left: 45%;">Add Last Category</button>
                    <p style="color: red; text-align:center;">@ViewBag.message</p>

                    </div>
                    <div class="row justify-content-center">
                        <div class="col-12 table-responsive">
                            <table class="table table-bordered mt-3">
                                <thead style="background-color:yellow;">
                                    <tr>
                                        <th>Service Name</th>
                                        <th>Package Name</th>
                                        <th>Price</th>
                                        <th>Delete</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var item in ViewBag.pack)
                                    {
                                        <tr>
                                            <td>
                                                @item.Service.Name
                                            </td>
                                            <td> @item.Name</td>
                                            <td>@item.Price</td>
                                            <td>
                                                <a type="button" class="btn btn-danger" asp-action="PackageDelete"
                                                    asp-route-packId="@item.Id">Delete</a>
                                            </td>
                                        </tr>
                                    }





                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
            </section>

 


    <div class="modal fade" id="staticBackdrop2" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
        aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog ">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="staticBackdropLabel" style="padding-left: 30%;">Add Package</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <form asp-action="AddPackage">
                        <div class="form-row col-md-12">
                            <div class=" col-md-8 ">
                                <div class="form-group ">
                                    <label for="exampleFormControlSelect1">Sub Category</label>
                                    <select asp-for="ServiceId" class="form-control" asp-items="ViewBag.serv">
                                        <option disabled selected>--- SELECT ---</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="input-title">Name</label>
                                    <input class="form-control" asp-for="Name" aria-describedby="titleHelp"
                                        placeholder="Enter title">

                                </div>

                                <div class="form-group">
                                    <label for="input-title">Price</label>
                                    <input class="form-control" asp-for="Price" aria-describedby="titleHelp"
                                        placeholder="Enter title">

                                </div>
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </div>

                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
 